<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.rasaselvan.ruebanmvc.Initialize">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two Space"
            android:id="@+id/rdnBtn2Space"
            android:checked="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_row="0"
            android:layout_column="0" />

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Three Space"
            android:id="@+id/rdnBtn3Space"
            android:checked="false"
            android:layout_alignTop="@+id/rdnBtn2Space"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_row="0"
            android:layout_column="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextViewPorV1"
            android:text="Insert Point or Vector 1"
            android:layout_marginTop="33dp"
            android:layout_below="@+id/rdnBtn2Space"
            android:layout_alignLeft="@+id/editTextPorV2"
            android:layout_alignStart="@+id/editTextPorV2"
            android:layout_row="1"
            android:layout_column="0" />

        <EditText
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editNumXP1"
            android:layout_below="@+id/editTextPorV1"
            android:layout_alignLeft="@+id/editTextPorV2"
            android:layout_alignStart="@+id/editTextPorV2"
            android:layout_toLeftOf="@+id/TextViewDisplay"
            android:layout_toStartOf="@+id/TextViewDisplay"
            android:layout_row="2"
            android:layout_column="0" />

        <EditText
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editNumYP1"
            android:layout_below="@+id/editTextPorV2"
            android:layout_alignRight="@+id/editTextPorV2"
            android:layout_alignEnd="@+id/editTextPorV2"
            android:layout_row="2"
            android:layout_column="1" />

        <EditText
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editNumZP1"
            android:layout_below="@+id/editNumYP1"
            android:layout_toLeftOf="@+id/editTextPorV2"
            android:layout_alignLeft="@+id/btnGenVEqu"
            android:layout_alignStart="@+id/btnGenVEqu"
            android:layout_row="2"
            android:layout_column="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/TextViewPorV2"
            android:text="Insert Point or Vector 2"
            android:layout_below="@+id/editTextPorV1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="46dp"
            android:layout_row="3"
            android:layout_column="0" />

        <EditText
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editNumXP2"
            android:layout_below="@+id/editTextPorV1"
            android:layout_alignLeft="@+id/editTextPorV2"
            android:layout_alignStart="@+id/editTextPorV2"
            android:layout_toLeftOf="@+id/TextViewDisplay"
            android:layout_toStartOf="@+id/TextViewDisplay"
            android:layout_row="4"
            android:layout_column="0" />

        <EditText
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editNumYP2"
            android:layout_below="@+id/editTextPorV1"
            android:layout_alignLeft="@+id/editTextPorV2"
            android:layout_alignStart="@+id/editTextPorV2"
            android:layout_toLeftOf="@+id/TextViewDisplay"
            android:layout_toStartOf="@+id/TextViewDisplay"
            android:layout_row="4"
            android:layout_column="1" />

        <EditText
            android:layout_width="70dip"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editNumZP2"
            android:layout_below="@+id/editTextPorV1"
            android:layout_alignLeft="@+id/editTextPorV2"
            android:layout_alignStart="@+id/editTextPorV2"
            android:layout_toLeftOf="@+id/TextViewDisplay"
            android:layout_toStartOf="@+id/TextViewDisplay"
            android:layout_row="4"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cross Product"
            android:id="@+id/btnCross"
            android:layout_alignTop="@+id/btnDot"
            android:layout_alignRight="@+id/rdnBtn3Space"
            android:layout_alignEnd="@+id/rdnBtn3Space"
            android:layout_marginRight="35dp"
            android:layout_marginEnd="35dp"
            android:layout_row="6"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dot Product"
            android:id="@+id/btnDot"
            android:layout_above="@+id/TextViewDisplay"
            android:layout_toLeftOf="@+id/btnCross"
            android:layout_toStartOf="@+id/btnCross"
            android:layout_marginBottom="49dp"
            android:layout_row="6"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="V Equation"
            android:id="@+id/btnGenVEqu"
            android:layout_alignTop="@+id/btnGenPEqu"
            android:layout_alignLeft="@+id/btnDot"
            android:layout_alignStart="@+id/btnDot"
            android:layout_row="7"
            android:layout_column="0" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/TextViewDisplay"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="38dp"
            android:layout_row="9"
            android:layout_column="0" />

    </GridLayout>

</RelativeLayout>
